<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilt"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rela_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_3853e8">

        <ImageView
            android:id="@+id/imgv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/arrow_white_left" />

        <TextView
            android:id="@+id/tv_titleBar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加DDL"
            android:textColor="@color/whilt"
            android:textSize="@dimen/textSize_18sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rela_tool_bar"
        android:background="@color/whilt"

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/whilt"
            android:gravity="center_vertical"
            android:hint="输入笔记名称"
            android:paddingLeft="12dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/color_f2f2f2" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/whilt"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:hint="选择类型"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/color_f2f2f2" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/whilt"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:hint="选择时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/color_f2f2f2" />


        <EditText
            android:id="@+id/edt_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whilt"
            android:gravity="center_vertical"
            android:hint="输入笔记详情内容"
            android:paddingLeft="12dp"
            android:paddingTop="20dp"
            android:paddingRight="12dp"
            android:paddingBottom="20dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_14sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_shape_round"
        android:gravity="center"
        android:padding="14dp"
        android:text="完成"
        android:textColor="@color/whilt"
        android:textSize="@dimen/textSize_16sp" />

</RelativeLayout>